<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
	android:shape="rectangle">
	<!-- border color -->
	<stroke
		android:width="0.5dp"
		android:color="@color/colorPrimary" />

	<!-- background color -->
	<solid
		android:color="@color/colorPrimaryShade"
		/>

	<corners android:bottomLeftRadius="@dimen/bottom_cap_radius"
		android:bottomRightRadius="@dimen/bottom_cap_radius" />

	<padding
		android:left="3dp"
		android:right="3dp"
		android:top="3dp"
		android:bottom="3dp" >
	</padding>

</shape>
