<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
	android:shape="rectangle">
	<!-- border color -->
	<stroke
		android:width="0.5dp"
		android:color="@color/colorPrimary" />

	<!-- background color -->
	<solid
		android:color="@color/colorPrimaryShade"
		/>

	<corners android:topLeftRadius="@dimen/top_cap_radius"
		android:topRightRadius="@dimen/top_cap_radius" />

	<padding
		android:left="20dp"
		android:right="20dp"
		android:top="10dp"
		android:bottom="10dp" >
	</padding>

</shape>
