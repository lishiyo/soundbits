<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="30dp"
	android:gravity="center"
	android:layout_gravity="center_horizontal"
	>

		<info.abdolahi.CircularMusicProgressBar
			android:id="@+id/track_image"
			android:layout_width="260dp"
			android:layout_height="260dp"
			android:layout_gravity="center_horizontal"
			android:layout_centerHorizontal="true"
			app:border_color="@color/turquoise"
			app:progress_color="@color/colorPurple"
			app:border_width="6dp"
			app:centercircle_diammterer="1"
			app:progress_startAngle="0"
			app:draw_anticlockwise="false"
			android:elevation="4dp"
			/>

		<LinearLayout
			android:id="@+id/track_title_wrapper"
			android:layout_below="@id/track_image"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_gravity="center"
			android:gravity="center"
			android:padding="20dp"
			android:elevation="6dp"
			android:visibility="invisible"
			>

			<TextView
				android:id="@+id/track_name"
				android:layout_width="wrap_content"
				android:textColor="@color/colorPurple"
				android:textSize="26dp"
				android:textStyle="bold"
				android:layout_height="wrap_content"
				android:fontFamily="@font/amatic_sc"
				/>

			<TextView
				android:id="@+id/artist_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/colorPurple"
				android:textSize="22dp"
				android:textStyle="normal"
				android:fontFamily="@font/amatic_sc"
				/>

		</LinearLayout>

</RelativeLayout>
