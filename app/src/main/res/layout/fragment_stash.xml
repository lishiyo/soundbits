<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/gradient_blues"
	android:paddingTop="@dimen/scrollview_padding_top"
	android:paddingBottom="@dimen/scrollview_padding_top"
	>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<com.cziyeli.songbits.stash.SimpleCardWidget
			android:id="@+id/likes_card"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>
		</com.cziyeli.songbits.stash.SimpleCardWidget>

		<com.cziyeli.songbits.stash.SimpleCardWidget
			android:id="@+id/dislikes_card"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>
		</com.cziyeli.songbits.stash.SimpleCardWidget>

	</LinearLayout>

</android.support.v4.widget.NestedScrollView>