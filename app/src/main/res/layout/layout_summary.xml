<?xml version="1.0" encoding="utf-8"?>
<com.cziyeli.songbits.cards.summary.SummaryLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:textSize="14sp"
		android:typeface="sans"
		android:textStyle="normal"/>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<!-- progress indicator -->
		<com.wang.avi.AVLoadingIndicatorView
			android:id="@+id/progress"
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			style="@style/AVLoadingIndicatorView"
			android:layout_gravity="center"
			android:gravity="center"
			android:visibility="visible"
			app:indicatorName="LineScalePulseOutIndicator"
			app:indicatorColor="@color/colorAccent"
			/>

		<!-- show card/stats -->
		<LinearLayout
			android:id="@+id/stats_container"
			android:visibility="gone"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/stats_summary"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textSize="14sp"
				android:typeface="sans"
				android:textStyle="normal"/>

			<Button
				android:id="@+id/action_create_playlist"
				android:text="create playlist out of your likes"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<Button
				android:id="@+id/action_save_to_database"
				android:text="stash your likes and keep surfing"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<Button
				android:id="@+id/action_review_tracks"
				android:text="review your selections"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

		</LinearLayout>

	</FrameLayout>

</com.cziyeli.songbits.cards.summary.SummaryLayout>