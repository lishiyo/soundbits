<resources>

	<!-- Base application theme. -->
	<style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme" parent="AppTheme.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryShade</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:fontFamily">@font/indie_flower</item>
		<!--<item name="android:textViewStyle">@style/QuicksandStyle</item>-->
		<!--<item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>-->
	</style>

	<style name="AppTheme.TranslucentNavigation" parent="AppTheme">
		<item name="android:windowTranslucentNavigation">true</item>
		<item name="android:fitsSystemWindows">true</item>
	</style>

	<style name="HomeToPlaylist" parent="AppTheme.TranslucentNavigation">
		<item name="android:windowContentTransitions">true</item>
		<item name="android:windowEnterTransition">@transition/default_window_fade</item>
		<item name="android:windowExitTransition">@transition/default_window_fade</item>
		<item name="android:windowReenterTransition">@transition/default_window_fade</item>
		<item name="android:windowReturnTransition">@transition/default_window_fade</item>

		<!-- specify enter and exit transitions -->
		<!-- options are: explode, slide, fade -->
		<!--<item name="android:windowEnterTransition">@transition/change_image_transform</item>-->
		<!--<item name="android:windowExitTransition">@transition/change_image_transform</item>-->

		<item name="android:windowAllowEnterTransitionOverlap">true</item>
		<item name="android:windowAllowReturnTransitionOverlap">true</item>

		<!-- specify shared element transitions -->
		<item name="android:windowSharedElementEnterTransition">
			@transition/change_image_transform</item>
		<item name="android:windowSharedElementExitTransition">
			@transition/change_image_transform</item>
	</style>

	<style name="HomeToPlaylist.Back" >
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="CreatePlaylist" parent="HomeToPlaylist.Back" >
		<!--<item name="android:backgroundDimEnabled">true</item>-->
		<!--<item name="android:windowIsFloating">false</item>-->
	</style>

	<style name="FragmentTitle">
		<item name="android:textSize">@dimen/fragment_title_size</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textAlignment">center</item>
		<item name="android:textColor">@color/colorWhite</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:fontFamily">@font/amatic_sc</item>
	</style>

	<style name="StatsColumn">
		<item name="android:textSize">@dimen/default_title_size</item>
		<item name="android:fontFamily">@font/amatic_sc</item>
		<item name="android:textColor">@color/colorStat</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="StatsTitle">
		<item name="android:textSize">@dimen/default_text_size</item>
		<item name="android:baselineAlignBottom">true</item>
		<item name="android:gravity">bottom|start</item>
	</style>

	<style name="StatsTitle.Num">
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:fontFamily">@font/amatic_sc</item>
		<item name="android:textColor">@color/colorStat</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textAlignment">textEnd</item>
	</style>

	<style name="simpleRangeView">
		<item name="android:clickable">false</item>
		<item name="android:focusable">false</item>
		<item name="android:enabled">false</item>
		<item name="android:layout_marginLeft">0dp</item>
		<item name="start">0</item>
		<item name="end">0</item>
		<item name="showFixedLine">true</item>
		<item name="showLabels">false</item>
		<item name="startFixed">0</item>
		<item name="endFixed">9</item>
		<item name="movable">false</item>
		<item name="activeLineColor">@color/colorStat</item>
		<item name="activeTickColor">@color/ghost_white</item>
		<item name="activeThumbColor">@color/colorStat</item>
		<item name="fixedLineColor">@color/colorGrey</item>
		<item name="fixedThumbLabelColor">@color/colorGrey</item>
		<item name="fixedThumbColor">@color/colorGrey</item>
		<item name="tickColor">@color/ghost_white</item>
		<item name="innerRangePadding">@dimen/stats_range_padding</item>
		<item name="innerRangePaddingLeft">@dimen/stats_range_padding</item>
		<item name="innerRangePaddingRight">@dimen/stats_range_padding</item>
		<item name="fixedThumbRadius">@dimen/stats_radius_thumb</item>
		<item name="activeLineThickness">@dimen/stats_line_width</item>
		<item name="fixedLineThickness">@dimen/stats_line_width</item>
		<item name="activeThumbRadius">@dimen/stats_radius_thumb</item>
		<item name="showTicks">true</item>
		<item name="showActiveTicks">true</item>
	</style>

	<style name="trackCardButton">
		<item name="android:layout_width">60dp</item>
		<item name="android:layout_height">60dp</item>
		<item name="android:layout_margin">20dp</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:elevation">10dp</item>
	</style>

	<style name="trackCardButton.Player">
		<item name="android:layout_width">60dp</item>
		<item name="android:layout_height">60dp</item>
		<item name="android:layout_margin">0dp</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:visibility">gone</item>
		<item name="android:elevation">10dp</item>
		<item name="android:drawableTint">@color/colorPurple</item>
		<item name="android:tint">@color/colorPurple</item>
	</style>

	<style name="TextCreateLabel">
		<item name="android:textColor">@color/persian_blue</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/default_text_size</item>
		<item name="android:textAlignment">center</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">15dp</item>
	</style>

	<style name="SummaryButton">
		<!--<item name="android:fontFamily">@font/raleway_light</item>-->
		<!--<item name="android:textStyle">bold</item>-->
		<item name="android:textAlignment">center</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:padding">10dp</item>
		<item name="android:radius">12dp</item>
		<item name="android:innerRadius">12dp</item>
	</style>
</resources>
